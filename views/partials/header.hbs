<header>
  <div class="slide-in-header">
    <div class="top-header show-mobile">
      <span class="conference-name-small">Due to Covid-19, SSR 2020 will take place virtually.</span>
    </div>
    <div class="header-content">
      <div class="branding">
        <a class="ssr-link" href="/">
          <span class="ssr-2020">SSR 2020</span>
        </a>
      </div>
      <button aria-label="Toggle mobile menu" class="mobile-menu-button">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
      </button>
      <ul class="header-navigation">
      {{#each (getHeaderLinks)}}
        <li class="{{#if children}} list-item-has-children {{/if}}">
          {{#if children}}
            <button class="header-link flx-row {{activeLink}} link-has-children">
              {{linkTitle}}
              <svg class="menu-down" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16"><path fill="context-fill" d="M8 12a1 1 0 0 1-.707-.293l-5-5a1 1 0 0 1 1.414-1.414L8 9.586l4.293-4.293a1 1 0 0 1 1.414 1.414l-5 5A1 1 0 0 1 8 12z"></path></svg>
            </button>
            <div class="link-children">
              {{#each children}}
                <a class="header-link flx-row child-link" href="{{linkHref}}">{{linkTitle}}</a>
              {{/each}}
            </div>
          {{else}}
          <a class="header-link flx-row {{ activeLink }}" href="{{linkHref}}">
            {{linkTitle}}
          </a>
        </li>
        {{/if}}
      {{/each}}
    </ul>
    </div>
    {{#if (showSubNav)}}
      <div class="sub-nav-mobile show-mobile">
        <a class="sub-nav-link active" href="#call-for-papers" data-section-string="#call-for-papers" data-section-id="0">Call for Papers</a>
        <a class="sub-nav-link" href="#topics" data-section-string="#topics" data-section-id="1">Topics</a>
        <a class="sub-nav-link" href="#committees" data-section-string="#committees" data-section-id="2">Committees</a>
      </div>
    {{/if}}
  </div>
  <div class="header-content desktop-menu">
    <div class="branding flx-col">
      <a class="ssr-link" href="/">
        <span class="ssr-2020">SSR 2020</span>
      </a>
      <span class="conference-name-small">{{getString "conference-name-full"}}</span>
      <span class="date header-date ">30 November 2020 - 1 December 2020</span>
    </div>
    <ul class="header-navigation">
      {{#each (getHeaderLinks)}}
        <li class="{{#if children}} list-item-has-children {{/if}}">
          {{#if children}}
            <button class="header-link flx-row {{activeLink}} link-has-children">
              {{linkTitle}}
              <svg class="menu-down" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16"><path fill="context-fill" d="M8 12a1 1 0 0 1-.707-.293l-5-5a1 1 0 0 1 1.414-1.414L8 9.586l4.293-4.293a1 1 0 0 1 1.414 1.414l-5 5A1 1 0 0 1 8 12z"></path></svg>
            </button>
            <div class="link-children">
              {{#each children}}
                <a class="header-link flx-row child-link" href="{{linkHref}}">{{linkTitle}}</a>
              {{/each}}
            </div>
          {{else}}
          <a class="header-link flx-row {{ activeLink }}" href="{{linkHref}}">
            {{linkTitle}}
          </a>
        </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</header>
